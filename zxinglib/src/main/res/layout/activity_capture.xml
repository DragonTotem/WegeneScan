<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.google.zxing.view.ViewfinderView
        android:id="@+id/viewfinderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:maskColor="#8727374D" />

    <ImageView
        android:id="@+id/iv_header_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_scan"
        android:layout_alignBottom="@id/tv_scan"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_back_white" />

    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="扫一扫"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_scan"
        android:layout_alignBottom="@id/tv_scan"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="相册"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_scan_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="将二维码/条形码放入框内，即可自动扫描"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/iv_light"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_scan_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_scan_black"
        android:scaleType="center"
        android:src="@drawable/ic_flashlight_white" />

</RelativeLayout>
